@model Web_KhachSanResort.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Thay đổi mật khẩu";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/style.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center mb-4">Thay Đổi Mật Khẩu</h2>
                    <form method="post" asp-action="ChangePassword">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" asp-for="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="MatKhauMoi" class="form-label">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="MatKhauMoi" asp-for="MatKhauMoi" required>
                            <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="NhapLaiMatKhauMoi" class="form-label">Nhập lại mật khẩu mới</label>
                            <input type="password" class="form-control" id="NhapLaiMatKhauMoi" asp-for="NhapLaiMatKhauMoi" required>
                            <span asp-validation-for="NhapLaiMatKhauMoi" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Thay Đổi Mật Khẩu</button>
                        <div class="mt-3 text-center">
                            <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none mt-3">Trang chủ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>



